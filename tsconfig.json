{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@components": ["components"],
      "@models/*": ["models/*"],
      "@pages": ["pages"],
      "@services/*": ["services/*"],
      "@theme": ["styles/theme"]
    }
  },
  "target": "es2017"
}
