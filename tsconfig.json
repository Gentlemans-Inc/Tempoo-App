{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["./assets/*"],
      "@components": ["./components"],
      "@ducks/*": ["./store/ducks/*"],
      "@hooks": ["./hooks"],
      "@models/*": ["./models/*"],
      "@pages": ["./pages"],
      "@services/*": ["./services/*"],
      "@store": ["./store"],
      "@theme": ["./styles/theme"]
    }
  },
  "target": "es2017"
}
